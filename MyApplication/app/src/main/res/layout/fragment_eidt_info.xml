<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EidtInfoFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@color/light_blue"></RelativeLayout>

                <LinearLayout
                    android:id="@+id/editprofile_header"
                    android:layout_width="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/editavataeIv"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="#cdc9c9"
                        android:padding="5dp"
                        android:src="@drawable/ic_add_image" />

                    <TextView
                        android:id="@+id/editprofile_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"

                        android:textColor="@color/black"
                        android:textSize="25sp" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/editprofile_header"
                    android:layout_marginLeft="50dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/editprofile_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/username_editti4le"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editprofile_role"
                        android:text="名字:"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/editprofilelayout_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pw_inputtitle"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="20dp">

                        <EditText
                            android:id="@+id/editprofile_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFDFD"
                            android:hint="名字"
                            android:inputType="textPersonName"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/phoneno_edittitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_email"
                        android:text="電話:"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/editprofilelayout_phoneno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pw_inputtitle"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="20dp">
                        <EditText
                            android:id="@+id/editprofile_phoneno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFDFD"
                            android:hint="電話"
                            android:inputType="text"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/address_edittitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_email"
                        android:text="地址:"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/editprofilelayout_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pw_inputtitle"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="20dp">
                        <EditText
                            android:id="@+id/editprofile_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFDFD"
                            android:hint="地址"
                            android:inputType="text"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/emergancyppl_edittitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/profile_email"
                        android:text="緊急聯絡人電話:"
                        android:textColor="@color/black"
                        android:textSize="24sp" />
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/editprofilelayout_emergancyppl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/pw_inputtitle"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="20dp">
                        <EditText
                            android:id="@+id/editprofile_emergancyppl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#FFFDFD"
                            android:hint="緊急聯絡人電話"
                            android:inputType="text"
                            android:textSize="20sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        ><Button
                        android:id="@+id/editconfirm_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="20dp"
                        android:background="#42576b"
                        android:text="確定修改"
                        android:textSize="20sp"
                        android:layout_alignParentRight="true"/></RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>